<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.cnpem.lnls.dig.controlpci.MainActivity"
    android:weightSum="1"
    android:orientation="vertical">

    <TextView
        android:text="@string/btn_toread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/qrValue"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:textStyle="normal|bold" />

    <ImageButton
        android:layout_width="100dp"
        app:srcCompat="@drawable/qrreader"
        android:id="@+id/btnReadqr"
        android:scaleType="fitXY"
        android:cropToPadding="false"
        android:elevation="0dp"
        android:adjustViewBounds="false"
        android:layout_height="100dp" />

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/boardInfo"
        android:layout_alignParentStart="false"
        android:headerDividersEnabled="false"
        android:layout_marginBottom="40dp"
        android:layout_height="wrap_content" />

    <Button
        android:text="Add Photo"
        android:layout_width="76dp"
        android:id="@+id/btnPhoto"
        android:layout_centerHorizontal="false"
        android:layout_height="40dp" />

    <Button
        android:text="Add Info"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/btnAddinfo"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="-40dp" />

</LinearLayout>
